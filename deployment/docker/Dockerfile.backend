FROM python:3.11-slim AS base

ENV PYTHONUNBUFFERED=1 \n    UV_PROJECT_ENVIRONMENT=/usr/local

RUN pip install --no-cache-dir uv \n    && apt-get update \n    && apt-get install -y --no-install-recommends build-essential \n    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY backend/ ./

RUN uv pip install --system .

ENV PYTHONPATH=/app/app

EXPOSE 8000

CMD ["uv", "run", "uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
